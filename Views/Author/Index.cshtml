@{
}
@model List<LifeCycleLab.Models.Author>

<h1>Authors</h1>
<table class="table">
    <thead>
        <tr>
            <th>FirstName</th>
            <th>SecondName</th>
            <th>LastName</th>
            <th>BirthDate</th>
            <th>Articles</th>
            <th> </th>

        </tr>
    </thead>
    <tbody>
        @foreach(var author in Model){
            <tr>
                <th>@author.FirstName</th>
                <th>@author.SecondName</th>
                <th>@author.LastName</th>
                <th>@author.BirthDate</th>
                <th>@string.Join(", ", author.Articles.Select(article => article.ToString()))</th>
                <th>
                    <a asp-controller="Author" asp-action="Edit" asp-route-id="@author.gid">Edit</a>
                </th>
            </tr>
        }
    </tbody>
</table>
<div class="mt-3">
    <button onclick="@("window.location.href='" + @Url.Action("Create", "Author") + "'");" type="submit" class="btn btn-primary">Add author +</button>
</div>
