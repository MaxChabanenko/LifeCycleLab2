
@model List<LifeCycleLab.Models.Article>

<h1>Articles</h1>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Author</th>
            <th>PublishDate</th>
            <th> </th>

        </tr>
    </thead>
    <tbody>
        @foreach(var article in Model){
            <tr>
                <th>@article.Title</th>
                <th>@article.Content</th>
                <th>@article.Author</th>
                <th>@article.PublishDate</th>
                <th>
                    <a asp-controller="Article" asp-action="Edit" asp-route-id="@article.gid">Edit</a>
                </th>
            </tr>
        }
    </tbody>
</table>
<div class="mt-3">
    <button onclick="@("window.location.href='" + @Url.Action("Create", "Article") + "'");" type="submit" class="btn btn-primary">Add article +</button>
</div>
